<nav>
  <%= link_to "/categories" do %>
    <i class="material-icons md-36">arrow_back</i>
  <% end %>
  <h2>ADD CATEGORY</h2>
  <i class="material-icons md-36">search</i>
</nav>

<div class="container">
  <%= render 'shared/notification_box' %>

  <div>
    <%= form_with model: @new_category, url: categories_path do |f| %>
      <div>
        <div>
          <%= f.label :name, "Category Name", class: 'form-label' %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', required: true %>
        </div>
        <br>
        <div>
          <%= f.label :icon, "Category Icon", class: 'form-label' %>
          <%= f.file_field :icon, autocomplete: "icon", class: 'form-control', required: true %>
        </div>
        <div class="large-button">
          <%= f.submit "Save", class: 'save-btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
