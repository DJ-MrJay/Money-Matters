<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <nav>
    <%= link_to '/' do %>
      <i class="material-icons md-36">arrow_back</i>
    <% end %>
    <h2>LOGIN</h2>
    <div class="actions">
      <%= f.submit "Log In", class: "login-submit" %>
    </div>
  </nav>

  <div class="login-inputs">
    <p><%= notice %></p>
    <p><%= alert %></p>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>
  </div>
<% end %>

<div class="forgot">
  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
  <% end %>
</div>
